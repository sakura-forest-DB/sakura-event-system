    <main class="container my-4 flex-grow-1">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header stall-header">
                        <h4 class="mb-0">🏪 出店申込内容確認</h4>
                        <small class="text-muted">内容をご確認の上、送信またはに戻って修正してください</small>
                    </div>
                    <div class="card-body stall-form-bg">
                        <!-- 基本情報 -->
                        <div class="form-section">
                            <h5>📝 基本情報</h5>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">参加団体名</label>
                                    <div class="confirm-value"><%= formData.groupName %></div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">代表者名</label>
                                    <div class="confirm-value"><%= formData.representative %></div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">メールアドレス</label>
                                    <div class="confirm-value"><%= formData.email %></div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">電話番号</label>
                                    <div class="confirm-value"><%= formData.phone %></div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">住所</label>
                                <div class="confirm-value"><%= formData.address || '未入力' %></div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">イベント</label>
                                <div class="confirm-value">
                                    <% if (event) { %>
                                        <strong><%= event.title %></strong>
                                        <small class="text-muted">（<%= new Date(event.date).toLocaleDateString('ja-JP') %>）</small>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- 出店内容 -->
                        <div class="form-section">
                            <h5>🏪 出店内容</h5>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">出店内容</label>
                                    <div class="confirm-value">
                                        <span class="badge bg-<%= formData.boothType === '飲食' ? 'warning' : 'info' %> fs-6">
                                            <%= formData.boothType %>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">希望出店枠数</label>
                                    <div class="confirm-value"><%= formData.boothCount || '未入力' %></div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">販売品目</label>
                                <div class="confirm-value"><%= formData.items || '未入力' %></div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">価格帯（最低価格）</label>
                                    <div class="confirm-value"><%= formData.priceRangeMin ? formData.priceRangeMin + '円' : '未入力' %></div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">価格帯（最高価格）</label>
                                    <div class="confirm-value"><%= formData.priceRangeMax ? formData.priceRangeMax + '円' : '未入力' %></div>
                                </div>
                            </div>
                        </div>

                        <!-- 設営・レンタル -->
                        <div class="form-section">
                            <h5>⛺ 設営・レンタル情報</h5>
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">テント横幅（m）</label>
                                    <div class="confirm-value"><%= formData.tentWidth || '未入力' %></div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">テント奥行（m）</label>
                                    <div class="confirm-value"><%= formData.tentDepth || '未入力' %></div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">テント高さ（m）</label>
                                    <div class="confirm-value"><%= formData.tentHeight || '未入力' %></div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">レンタルテーブル数</label>
                                    <div class="confirm-value"><%= formData.rentalTables || '0' %>台</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">レンタル椅子数</label>
                                    <div class="confirm-value"><%= formData.rentalChairs || '0' %>脚</div>
                                </div>
                            </div>
                        </div>

                        <!-- 搬入搬出 -->
                        <div class="form-section">
                            <h5>🚚 搬入搬出</h5>
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">車両台数</label>
                                    <div class="confirm-value"><%= formData.vehicleCount || '0' %>台</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">車両種別</label>
                                    <div class="confirm-value"><%= formData.vehicleType || '未選択' %></div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">車両ナンバー</label>
                                    <div class="confirm-value"><%= formData.vehicleNumbers || '未入力' %></div>
                                </div>
                            </div>
                        </div>

                        <!-- 連絡事項 -->
                        <div class="form-section">
                            <h5>💬 連絡事項</h5>
                            <div class="mb-3">
                                <label class="form-label">ご質問・ご要望等</label>
                                <div class="confirm-value" style="white-space: pre-wrap; min-height: 60px;">
                                    <%= formData.questions || '特になし' %>
                                </div>
                            </div>
                        </div>

                        <!-- 個人情報同意確認 -->
