<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || '出演申込内容確認' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .navbar-brand { font-weight: 700; color: #2d5a27 !important; }
    .btn-primary { background:#2d5a27; border-color:#2d5a27; }
    .btn-primary:hover { background:#1e3c1a; border-color:#1e3c1a; }
    .form-section { border-left:4px solid #2d5a27; padding-left:12px; margin-bottom: 1.5rem; }
    .performer-form-bg { background-color:#fce4ec; }
    .card-header.performer-header { background-color:#f8bbd9; border-bottom:1px solid #f48fb1; }
    .form-label {
      background:#f8f9fa; border:1px solid #dee2e6; padding:4px 8px; border-radius:3px;
      font-weight:600; display:inline-block; margin-bottom:6px; font-size:.9rem;
    }
    .confirm-value {
      background:#fff; border:1px solid #dee2e6; padding:8px 12px; border-radius:4px;
      min-height:38px; display:flex; align-items:center; white-space:pre-wrap;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container">
      <a class="navbar-brand" href="/">🌸 菊名桜山公園</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav1">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav1" class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/">ホーム</a></li>
          <li class="nav-item"><a class="nav-link" href="/register">ボランティア登録</a></li>
          <li class="nav-item"><a class="nav-link" href="/apply">イベント申込</a></li>
        </ul>
        <ul class="navbar-nav"><li class="nav-item"><a class="nav-link" href="/admin">管理画面</a></li></ul>
      </div>
    </div>
  </nav>

  <main class="container my-4 flex-grow-1">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card">
          <div class="card-header performer-header">
            <h4 class="mb-0">🎭 出演申込内容確認</h4>
            <small class="text-muted">内容をご確認の上、送信または戻って修正してください</small>
          </div>

          <div class="card-body performer-form-bg">
            <!-- イベント情報 -->
            <div class="form-section">
              <h5>📅 対象イベント</h5>
              <div class="confirm-value">
                <% if (event) { %>
                  <strong class="me-2"><%= event.title %></strong>
                  <small class="text-muted">（<%= new Date(event.date).toLocaleDateString('ja-JP') %>）</small>
                <% } else { %>
                  不明
                <% } %>
              </div>
            </div>

            <!-- 基本情報 -->
            <div class="form-section">
              <h5>📝 基本情報</h5>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">参加団体名</label>
                  <div class="confirm-value"><%= formData.groupName %></div>
                </div>
                <div class="col-md-6">
                  <label class="form-label">代表者名</label>
                  <div class="confirm-value"><%= formData.representative %></div>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">メールアドレス</label>
                  <div class="confirm-value"><%= formData.email %></div>
                </div>
                <div class="col-md-6">
                  <label class="form-label">電話番号</label>
                  <div class="confirm-value"><%= formData.phone %></div>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label">住所</label>
                <div class="confirm-value"><%= formData.address || '未入力' %></div>
              </div>
            </div>

            <!-- 出演内容 -->
            <div class="form-section">
              <h5>🎭 出演内容</h5>
              <div class="mb-3">
                <label class="form-label">出演内容</label>
                <div class="confirm-value" style="min-height:60px;"><%= formData.performance %></div>
              </div>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">出演者数</label>
                  <div class="confirm-value"><%= formData.performerCount || '未入力' %> 人</div>
                </div>
                <div class="col-md-6">
                  <label class="form-label">希望出演枠数</label>
                  <div class="confirm-value"><%= formData.slotCount || '未入力' %> 枠</div>
                </div>
              </div>
            </div>

            <!-- 音響・機材 -->
            <div class="form-section">
              <h5>🔊 レンタル拡声装置</h5>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">音源再生利用</label>
                  <div class="confirm-value"><%= formData.audioSourceOnly || '0' %> 枠分</div>
                </div>
                <div class="col-md-6">
                  <label class="form-label">音源拡声装置＋マイク1本セット</label>
                  <div class="confirm-value"><%= formData.rentalAmp || '0' %> 枠</div>
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label">追加マイク本数</label>
                <div class="confirm-value"><%= formData.rentalMic || '0' %> 本</div>
              </div>
            </div>

            <!-- 搬入搬出 -->
            <div class="form-section">
              <h5>🚚 搬入・搬出</h5>
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label">車両台数</label>
                  <div class="confirm-value"><%= formData.vehicleCount || '0' %> 台</div>
                </div>
                <div class="col-md-6">
                  <label class="form-label">車両ナンバー</label>
                  <div class="confirm-value"><%= formData.vehicleNumbers || '未入力' %></div>
                </div>
              </div>
            </div>

            <!-- 連絡事項 -->
            <div class="form-section">
              <h5>💬 連絡事項</h5>
              <div class="mb-3">
                <label class="form-label">ご質問・ご要望等</label>
                <div class="confirm-value" style="min-height:60px;"><%= formData.questions || '特になし' %></div>
              </div>
            </div>

            <!-- 個人情報同意 -->
            <div class="form-section">
              <h5>🔒 個人情報の取り扱い同意</h5>
              <div class="confirm-value">
                運営利用同意：<strong><%= formData.privacyConsent ? '同意する' : '未同意' %></strong>
                <span class="mx-2">/</span>
                マーケ利用同意：<strong><%= formData.marketingConsent ? '同意する' : '同意しない' %></strong>
              </div>
            </div>

            <!-- ボタン -->
            <div class="text-center mt-4">
              <!-- 送信（本登録） -->
              <form method="POST" action="/apply/<%= event.slug %>/performer/submit" class="d-inline">
                <% for (const [key, value] of Object.entries(formData)) { %>
                  <input type="hidden" name="<%= key %>" value="<%= value || '' %>">
                <% } %>
                <button type="submit" class="btn btn-success btn-lg me-3">✅ この内容で送信</button>
              </form>

              <!-- 戻って修正 -->
              <form method="POST" action="/apply/<%= event.slug %>/performer/edit" class="d-inline">
                <% for (const [key, value] of Object.entries(formData)) { %>
                  <input type="hidden" name="<%= key %>" value="<%= value || '' %>">
                <% } %>
                <button type="submit" class="btn btn-outline-secondary btn-lg">✏️ 戻って修正</button>
              </form>
            </div>
          </div><!-- /.card-body -->
        </div>
      </div>
    </div>
  </main>

  <footer class="py-3 mt-4">
    <div class="container text-center text-muted">
      <p>&copy; 2025 菊名桜山公園 ボランティア管理システム</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
