    <script>
        // Dynamic form display based on role selection
        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.getElementById('role');
            if (roleSelect) {
                function toggleRoleForms() {
                    const selectedRole = roleSelect.value;
                    document.querySelectorAll('.dynamic-form').forEach(form => {
                        form.classList.remove('active');
                    });
                    if (selectedRole) {
                        const targetForm = document.getElementById(selectedRole + '-form');
                        if (targetForm) {
                            targetForm.classList.add('active');
                        }
                    }
                }
                roleSelect.addEventListener('change', toggleRoleForms);
                toggleRoleForms(); // Initial call
            }
        });
