  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .navbar-brand {
      font-weight: 700;
      color: #2d5a27 !important;
      font-size: 1.5rem;
    }
    .btn-volunteer {
      background: #2d5a27;
      border-color: #2d5a27;
      color: #fff;
      font-weight: 600;
    }
    .btn-volunteer:hover {
      background: #1e3c1a;
      border-color: #1e3c1a;
      color: #fff;
    }
    .btn-stall {
      background: #d63384;
      border-color: #d63384;
      color: #fff;
      font-weight: 600;
    }
    .btn-stall:hover {
      background: #b02a6a;
      border-color: #b02a6a;
      color: #fff;
    }
    .btn-performer {
      background: #6f42c1;
      border-color: #6f42c1;
      color: #fff;
      font-weight: 600;
    }
    .btn-performer:hover {
      background: #59359a;
      border-color: #59359a;
      color: #fff;
    }
    .btn-view-all {
      background: #0d6efd;
      border-color: #0d6efd;
